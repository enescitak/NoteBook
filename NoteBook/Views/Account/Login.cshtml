@{
    ViewData["Title"] = "Login Page";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NoteBook.ViewModels.UserViewModel

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteBook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h1 class="text-center">Login</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Login" asp-controller="Account" method="post" class="mt-4">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input asp-for="username" type="text" class="form-control mt-2" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password:</label>
                        <input asp-for="password" type="password" class="form-control mt-2" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-block mt-3">Register</a>
                </form>
            </div>
        </div>
    </div>

</body>

</html>