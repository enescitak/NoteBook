@{
    ViewData["Title"] = "Login Page";
}

@model NoteBook.ViewModels.Login

<form id="login-form" asp-action="Login" asp-controller="Account" method="post">

    <h2>Login</h2>

    <div class="form-group">
        <input asp-for="Username" type="text" placeholder="Username" />
        <span class="text-danger" asp-validation-for="Username"></span><br />
    </div>

    <div class="form-group">
        <input asp-for="Password" type="password" placeholder="Password" />
        <span class="text-danger" asp-validation-for="Password"></span><br />
    </div>

    <div class="butn">
        <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>
        <a asp-controller="Account" asp-action="Register" class="btn btn-danger btn-block mt-4">Register</a>
    </div>

</form>