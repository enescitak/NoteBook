@{
    ViewData["Title"] = "Register Page";
}

@model NoteBook.Models.User

<form id="login-form" asp-action="Register" asp-controller="Account" method="post">

    <h2>Register</h2>

    <div class="form-group">
        <input asp-for="Username" type="text" placeholder="Username" />
        <span class="text-danger" asp-validation-for="Username"></span><br />
    </div>

    <div class="form-group">
        <input asp-for="Password" type="password" placeholder="Password" />
        <span class="text-danger" asp-validation-for="Password"></span><br />
    </div>

    <div class="form-group">
        <input asp-for="Email" type="email" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Email"></span><br />
    </div>

    <div class="butn">
        <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>
        <a asp-action="Login" class="btn btn-secondary mt-4">Cancel</a>
    </div>

</form>