@*@model IEnumerable<Note>*@

<h2>Your Notes</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var note in Model)
        {
            <li>@note.Content</li>
        }
    </ul>
}
else
{
    <p>You have no notes.</p>
}

<a asp-action="Create" asp-controller="Notes" class="btn btn-primary">Add New Note</a>
